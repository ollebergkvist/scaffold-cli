{
  "name": "@ollebergkvist/testtest",
  "description": "A CLI to scaffold common tools and configs",
  "author": "Olle Bergkvist",
  "version": "1.0.5",
  "main": "dist/bin/index.js",
  "license": "MIT",
  "type": "module",
  "bin": {
    "scaffold-cli": "dist/bin/index.js"
  },
  "scripts": {
    "dev": "nodemon --watch src ./src/bin/index.ts",
    "build": "tsc -p .",
    "prepare": "husky install",
    "format": "eslint --write \"src/**/*.ts\"",
    "ts-node": "ts-node-esm",
    "prettier:check": "yarn prettier --check .",
    "clean": "rimraf dist",
    "prepublish": "yarn build",
    "publish": "npm publish --access=public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "chalk": "^5.1.0",
    "colors": "^1.4.0",
    "commander": "^9.4.1",
    "figlet": "^1.5.2",
    "inquirer": "^9.1.2",
    "npm-add-script": "^1.1.0",
    "recursive-copy": "^2.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/figlet": "^1.5.5",
    "@types/node": "^18.8.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "cypress": "^10.9.0",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsonc": "^2.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "keywords": [
    "cli",
    "nodejs",
    "typescript",
    "prettier",
    "eslint",
    "lint-staged",
    "husky",
    "rimraf",
    "commitlint"
  ],
  "repository": {
    "url": "https://github.com/ollebergkvist/scaffold-cli",
    "type": "git"
  }
}
